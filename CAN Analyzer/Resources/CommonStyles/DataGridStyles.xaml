    <Style x:Key="FTC_Datagrid_CellControl" >
        <Setter Property="Control.FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Control.BorderBrush" Value="Transparent" />
        <Setter Property="Control.BorderThickness" Value="1" />
        <Setter Property="Control.Background" Value="Transparent" />
        <Setter Property="Control.SnapsToDevicePixels" Value="True" />
        <Style.Triggers>
            <Trigger Property="Control.IsKeyboardFocusWithin" Value="True">
                <Setter Property="Control.BorderBrush" Value="{StaticResource RowSelectedTextColor}"/>
                <Setter Property="Control.Foreground" Value="{StaticResource RowSelectedTextColor}"/>
            </Trigger>
            <Trigger Property="Control.IsMouseOver" Value="True">
                <Setter Property="Control.BorderBrush" Value="{StaticResource RowSelectedTextColor}"/>
                <Setter Property="Control.Foreground" Value="{StaticResource RowSelectedTextColor}"/>
            </Trigger>
        </Style.Triggers>
