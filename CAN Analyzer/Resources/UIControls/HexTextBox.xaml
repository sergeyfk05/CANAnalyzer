<UserControl x:Class="CANAnalyzer.Resources.UIControls.HexTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CANAnalyzer.Resources.UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ContextMenu x:Key="emptyContextMenu">
                <ContextMenu.Template>
                    <ControlTemplate TargetType="ContextMenu"/>
                </ContextMenu.Template>
            </ContextMenu>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <UserControl.Template>
        <ControlTemplate TargetType="local:HexTextBox">
            <TextBox Text="{TemplateBinding RealText}" PreviewTextInput="TextBox_PreviewTextInput" PreviewKeyDown="TextBox_PreviewKeyDown" SelectionChanged="TextBox_SelectionChanged" ContextMenu="{StaticResource emptyContextMenu}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"/>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
