<UserControl x:Class="CANAnalyzer.Pages.AppSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resources="clr-namespace:CANAnalyzer.Resources.DynamicResources"
             xmlns:vm="clr-namespace:CANAnalyzer.VM"
             xmlns:local="clr-namespace:CANAnalyzer.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:AppSettingPageVM/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/CommonStyles/CommonStyles.xaml"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{resources:Language AppSettingsTitle}" FontFamily="Arial" FontSize="18" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Left">
            <ComboBox Height="30" 
                  VerticalAlignment="Center"
                  Width="150" 
                  ItemsSource="{Binding Languages}"
                  SelectedItem="{Binding CurrentLanguage}"/>
            <ComboBox Height="30" 
                  VerticalAlignment="Center"
                  Width="150" 
                  ItemsSource="{Binding Themes}"
                  SelectedItem="{Binding CurrentTheme}"/>
        </StackPanel>

    </Grid>
</UserControl>
