<UserControl x:Class="CANAnalyzer.Pages.AppSettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resources="clr-namespace:CANAnalyzer.Resources.DynamicResources"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:vm="clr-namespace:CANAnalyzer.VM"
             xmlns:local="clr-namespace:CANAnalyzer.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:AppSettingPageVM/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <ResourceDictionary Source="../Resources/CommonStyles/CommonStyles.xaml"/>
    </UserControl.Resources>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>


    <StackPanel Margin="10">

        <Grid Height="30">
            <TextBlock Grid.Row="0" Text="{resources:Language AppSettingsPageTitle}" FontFamily="Arial" FontSize="18" VerticalAlignment="Center"/>
        </Grid>


        <StackPanel Grid.Row="1" HorizontalAlignment="Left" Orientation="Horizontal">
            <GroupBox Header="{resources:Language AppSettingPageSelectLanguage}" Padding="5">
                <ComboBox
                  VerticalAlignment="Center"
                  Width="150" 
                  ItemsSource="{Binding Languages}"
                  SelectedItem="{Binding CurrentLanguage}"/>
            </GroupBox>

            <GroupBox Header="{resources:Language AppSettingPageSelectTheme}" Padding="5" Margin="15 0 0 0">
                <ComboBox
                  VerticalAlignment="Center"
                  Width="150" 
                  ItemsSource="{Binding Themes}"
                  SelectedItem="{Binding CurrentTheme}"/>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Left">
            <GroupBox Header="{resources:Language AppSettingPageSelectDevice}" Padding="5">
                <DockPanel>
                    <ComboBox VerticalAlignment="Center"
                              Width="150" 
                              DockPanel.Dock="Left"
                              ItemsSource="{Binding Devices}"
                              SelectedItem="{Binding SelectedDevice}">

                        <ComboBox.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Control.IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ComboBox.Style>
                        
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseEnter">
                                <i:InvokeCommandAction Command="{Binding UpdateDevicesInfoCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>

                    <Button Margin="10 0 0 0" Command="{Binding DeviceConnectCommand}" Padding="5 0 5 0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                        <Setter Property="Content" Value="{resources:Language AppSettingPageConnectDevice}"/>
                                    </DataTrigger>

                                    <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                        <Setter Property="Content" Value="{resources:Language AppSettingPageDisconnectDevice}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </DockPanel>
            </GroupBox>

            <ListBox>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="">
                            
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

        </StackPanel>


    </StackPanel>
</UserControl>
